<% content_for :extra_js do %>
  $('form#new_user').validate();
<% end %>

<% content_for :profile_subtitle, 'Sign up' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :fname, 'Nombre' %><br />
        <%= f.text_field :fname %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="field">
        <%= f.label :lname, 'Apellido' %><br />
        <%= f.text_field :lname %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", minlength: @minimum_password_length, required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar password' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
