<div class="filterable" id="filterable-users" style="padding-right:30px;">
	<%= form_tag users_path, method: :get do %>
		<div class="row">
			<%= button_tag 'Buscar', type: :submit, class: 'btn btn-xs btn-success' %>
			<div class="col-xs-6">
				<div class="field">
					<%= search_field_tag 'f[search]', filterable(:search), placeholder: 'Buscar' %>
				</div>
			</div>
			<div class="col-xs-3">
				<div class="field">
					<%= select_tag 'f[order]', filterable_select(users, :order), prompt: 'Ordenar', class: 'selectpicker' %>
				</div>
			</div>
		</div>
	<% end %>
</div>