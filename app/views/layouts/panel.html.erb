<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head prefix="og: http://ogp.me/ns#">
	<%= render 'layouts/head' %>
	<%= stylesheet_link_tag    'application_panel', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application_panel', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="control-panel">
	<%= render 'panel/navigation' %>
	<section class="page-top">
		<div class="logo"> <a href="<%= home_path %>"> <img src="<%= asset_path 'Aria_Logo.png' %>" alt="Aria" title="Aria"> </a> </div>
	</section>
	<div class="container <%= (controller_name != 'panel' ? controller_name : '' ) + ' ' + action_name %>">
		<%= yield %>
	</div>
	<script>
		$(function() {
			<% if notice.present? %>
				Alerts.success('<%= notice %>');
			<% end %>
			<% if alert.present? %>
				Alerts.danger('<%= alert %>');
			<% end %>
			<%= content_for :extra_js %>
		});
	</script>
</body>
</html>
