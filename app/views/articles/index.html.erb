<% content_for :panel_subtitle, 'Artículos' %>

<div class="btn-group pull-right btn-group-xs" style="margin-top: -30px;">
  <%= link_to new_article_path(@shape), title: 'Nuevo', class: 'btn btn-warning tooltip-trigger' do %>
    <i class="fa fa-plus fa-fw" aria-hidden="true"></i>
  <% end %>
</div>

<div style="margin-bottom:20px;">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="<%= 'active' if @shape == :about %>">
      <a href="<%= articles_path(:about) %>">La empresa</a>
    </li>
    <li role="presentation" class="<%= 'active' if @shape == :services %>">
      <a href="<%= articles_path(:services) %>">Servicios</a>
    </li>
  </ul>
</div>

<% unless @articles.present? %>
  No hay ningún articulo de este formato
<% else %>
  <div class="table-responsive">
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Image</th>
          <th>Title</th>
          <!--th>Subtitle</th-->
          <th>Link</th>
          <!--th>Position</th-->
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td>
              <%= link_to article do %>
                <%= image_tag article.image.url(:thumb), style: 'height: 24px; width: auto; margin: -4px 0 -2px;' %>
              <% end %>
            </td>
            <td>
              <%= link_to article, style: 'color:inherit;' do %>
                <%= article.title %>
              <% end %>
            </td>
            <!--td><%= article.subtitle %></td-->
            <td><%= article.link %></td>
            <!--td><%= article.position %></td-->
            <td>
              <%= link_to article do %>
                <i class="fa fa-external-link fa-fw" aria-hidden="true"></i>
              <% end %>
            </td>
            <td>
              <%= link_to edit_article_path(article) do %>
                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
              <% end %>
            </td>
            <td>
              <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-danger' do %>
                <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
