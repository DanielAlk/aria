<div class="panel panel-default">
  <div class="panel-heading" role="tab">
    <div class="panel-heading-actions">
      <% if category.has_children? %>
      	<%= link_to '#group-' + category.id.to_s, class: 'link-gray', data: { toggle: 'collapse' }, role: 'button' do %>
      		<i class="fa fa-caret-down fa-fw fa-flip-vertical" aria-hidden="true"></i>
      	<% end %>
      <% end %>
      <%= link_to '#', class: 'link-success', data: { toggle: 'modal', target: '#modalCreateAncestry', ancestry: category.path_to_s } do %>
        <i class="fa fa-plus fa-fw" aria-hidden="true"></i>
      <% end %>
      <%= link_to category, class: 'link-danger', method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
      <% end %>
    </div>
    <h4 class="panel-title title-editable" data-toggle="collapse" data-target="#group-<%= category.id %>">
      <span><%= category.title %></span>
      <%= form_for(category) do |f| %>
        <%= f.text_field :title %>
      <% end %>
    </h4>
  </div>
  <% if category.has_children? %>
	  <div id="group-<%= category.id %>" class="panel-collapse collapse in" role="tabpanel">
	  	<div class="panel-group" role="tablist">
	  	  <%= render category.children %>
	  	</div>
	  </div>
  <% end %>
</div>