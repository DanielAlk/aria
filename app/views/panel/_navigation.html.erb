<% if request.subdomain[/panel/] %>
	<div class="admin-navigation">
		<div class="btn-group">
			<% if admin_signed_in? %>
				<a href="#admin_navigation" class="visible-xs" data-util="class" data-toggle="in">
					<i class="fa fa-bars fa-fw" aria-hidden="true"></i>
				</a>
			<% end %>
		</div>
		<div class="btn-group">
			<% if admin_signed_in? %>
				<%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, aria_haspopup: 'true', aria_expanded: false do -%>
					<%= current_admin.email %> &nbsp; <i class="fa fa-user" aria-hidden="true"></i>
				<% end %>
				<ul class="dropdown-menu">
					<li>
						<%= link_to edit_admin_registration_path do %>
							<i class="fa fa-edit fa-fw" aria-hidden="true"></i> Editar
						<% end %>
					</li>
			    <li>
						<%= link_to destroy_admin_session_path, method: :delete do %>
							<i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Salir
						<% end %>
					</li>
				</ul>
			<% else %>
				<%= link_to panel_path do %>
					<i class="fa fa-sign-in" aria-hidden="true"></i> Ingresar
				<% end %>
			<% end %>
		</div>
	</div>

	<% content_for :admin_nav do %>
		<ul class="nav nav-pills nav-stacked">
		  <li role="presentation" class="<%= admin_nav_class(:panel) %>">
		  	<%= link_to panel_path do %>
		  		<i class="fa fa-user fa-fw" aria-hidden="true"></i> Panel
		  	<% end %>
		  </li>
		  <li role="presentation" class="<%= admin_nav_class(edit_admin_registration_path) %>">
		  	<%= link_to edit_admin_registration_path do %>
		  		<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Editar Admin
		  	<% end %>
		  </li>
		  <li role="presentation" class="<%= admin_nav_class(:categories) %>">
		  	<%= link_to categories_path do %>
		  		<i class="fa fa-list fa-fw" aria-hidden="true"></i> Categorias
		  	<% end %>
		  </li>
		  <li role="presentation">
		  	<%= link_to destroy_user_session_path, class: 'link-danger', method: :delete do %>
		  		<i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Cerrar sesi√≥n
		  	<% end %>
		  </li>
		</ul>
	<% end %>
<% end %>