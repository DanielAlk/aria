			</div>
			<div class="editable" style="margin-bottom:5px;">
				<span><%= @website.google %></span>
				<%= form_for @website do |f| %>
					<%= f.text_field :google, id: 'website_1_google', placeholder: 'Google', required: true, autocomplete: 'off' %>
				<% end %>
			</div>
			<div class="editable" style="margin-bottom:5px;">
				<span><%= @website.linkedin %></span>
