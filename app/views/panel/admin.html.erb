				<%= form_for @website do |f| %>
					<%= f.phone_field :mobile, id: 'website_1_mobile', placeholder: 'Celular', required: true, autocomplete: 'off' %>
				<% end %>
			</div>
			<div class="editable" style="margin-bottom:5px;">
				<span><%= @website.facebook %></span>
				<%= form_for @website do |f| %>
					<%= f.text_field :facebook, id: 'website_1_facebook', placeholder: 'Facebook', required: true, autocomplete: 'off' %>
