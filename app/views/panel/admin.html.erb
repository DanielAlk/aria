<% content_for :extra_js do %>
	$('.editable').editable(function(form, response) {
		var $input = $(form).find('input:not([type=hidden])');
		Alerts.success('Se actualizó el '+ $input.attr('placeholder').toLowerCase() +' de los datos de la web');
	});
<% end %>

<% content_for :panel_subtitle, current_admin.email %>

<div class="well">
	<h4 class="text-center" style="margin-bottom:15px;">Datos de la Web</h4>
	<div class="row">
		<div class="col-xs-4 text-right">
			<div style="margin-bottom:5px;"><b>Dirección:</b></div>
			<div style="margin-bottom:5px;"><b>Email:</b></div>
			<div style="margin-bottom:5px;"><b>Teléfono:</b></div>
			<div style="margin-bottom:5px;"><b>Celular:</b></div>
			<div style="margin-bottom:5px;"><b>Facebook:</b></div>
			<div style="margin-bottom:5px;"><b>Twitter:</b></div>
			<div style="margin-bottom:5px;"><b>Google:</b></div>
			<div style="margin-bottom:5px;"><b>Linkedin:</b></div>
			<div style="margin-bottom:5px;"><b>Youtube:</b></div>
		</div>
		<div class="col-xs-8">
			<div class="editable" style="margin-bottom:5px;">
				<span><%= @website.address %></span>
				<%= form_for @website do |f| %>
					<%= f.text_field :address, id: 'website_1_address', placeholder: 'Dirección', required: true, autocomplete: 'off' %>
				<% end %>
			</div>
			<div class="editable" style="margin-bottom:5px;">
				<span><%= @website.email %></span>
				<%= form_for @website do |f| %>
					<%= f.email_field :email, id: 'website_1_email', placeholder: 'Email', required: true, autocomplete: 'off' %>
