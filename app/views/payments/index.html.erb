<p id="notice"><%= notice %></p>

<h1>Listing Payments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Transaction amount</th>
      <th>Installments</th>
      <th>Payment method</th>
      <th>Token</th>
      <th>Mercadopago payment</th>
      <th>Mercadopago payment</th>
      <th>Status</th>
      <th>Status detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user %></td>
        <td><%= payment.transaction_amount %></td>
        <td><%= payment.installments %></td>
        <td><%= payment.payment_method_id %></td>
        <td><%= payment.token %></td>
        <td><%= payment.mercadopago_payment %></td>
        <td><%= payment.mercadopago_payment_id %></td>
        <td><%= payment.status %></td>
        <td><%= payment.status_detail %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

