<div class="filterable" id="filterable-payments" style="padding-right:30px;">
	<%= form_tag payments_path, method: :get do %>
		<div class="row">
			<div class="col-xs-3">
				<div class="field">
					<%= select_tag 'f[order]', filterable_select(payments, :order), prompt: 'Ordenar', class: 'selectpicker' %>
				</div>
			</div>
		</div>
	<% end %>
</div>