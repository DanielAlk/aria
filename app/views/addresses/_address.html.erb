<div class="panel panel-success" id="<%= 'panel-template' if address.new_record? %>">
  <div class="panel-heading" role="tab">
    <div class="panel-heading-actions">
      <%= link_to 'javascript:void(0);', title: 'Dirección principal', class: 'tooltip-trigger link-primary is-first' + (address.first? ? '' : ' hidden') do %>
        <i class="fa fa-star fa-fw" aria-hidden="true"></i>
      <% end %>
      <%= link_to address, title: 'Marcar como principal', class: 'tooltip-trigger link-primary'  + (!address.first? ? '' : ' hidden'), data: { util: 'update', hash: { 'address[position]': 1 } } do %>
        <i class="fa fa-star-o fa-fw" aria-hidden="true"></i>
      <% end %>
      <%= link_to edit_address_path(address), title: 'Editar', class: 'tooltip-trigger link-warning' do %>
        <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
      <% end %>
      <%= link_to address, title: 'Eliminar', class: 'tooltip-trigger link-danger' + (address.new_record? ? ' hidden' : ''), data: { util: 'delete', confirm: '¿Seguro?', remove: '.panel', event: '#group-root' } do %>
        <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
      <% end %>
    </div>
    <h4 class="panel-title">
      <%= link_to address.address, address %>
    </h4>
  </div>
</div>