@import url(https://fonts.googleapis.com/css?family=Roboto:400,300,500,700,100);
@import url(//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css);

@font-face {
    font-family: "Aria-Light";
    font-style: normal;
    font-weight: normal;
    src: url("<%= asset_path 'Aria-Light.eot' %>") format("eot"),
         url("<%= asset_path 'Aria-Light.otf' %>") format("otf"),
         url("<%= asset_path 'Aria-Light.woff2' %>") format("woff2"),
         url("<%= asset_path 'Aria-Light.woff' %>") format("woff"),
         url("<%= asset_path 'Aria-Light.ttf' %>") format("truetype"),
         url("<%= asset_path 'Aria-Light.svg#Aria-Light' %>") format("svg");
}

