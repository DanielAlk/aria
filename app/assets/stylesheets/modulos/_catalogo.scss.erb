/* Catalogo de Productos */
.page-title h1 {
  margin-bottom: 20px;
  margin-top: 20px;
}

.filtros {
  width: 100%;
  margin-bottom: 30px;
  padding: 10px 0;
    
    .ordenar,
    .cantidad,
    .paginador {
      display: inline-block;
      vertical-align: middle;
      width: 33.33333%;
        
        label,
        span {
          display: inline-block;
          vertical-align: middle;
          font-size: 11px;
          text-transform: uppercase;
          line-height: 1;
        }
        
        select {
          border: 1px solid #ccc;
          border-radius: 0;
          height: 26px;
          padding: 5px;
          outline: none;
          margin: 0 5px;
            
            &:focus {
              outline: none;
            }
        }
        
        ul {
          display: inline-block;
          vertical-align: middle;
            
            li {
              display: inline-block;
              vertical-align: middle;
              margin-left: 5px;
              width: 25px;
              height: 25px;
              text-align: center;
                
                span {
                  display: block;
                  line-height: 25px;
                  width: 13px;
                  height: 25px;
                }
                
                a {
                  display: block;
                  padding: 6px;
                  background: red;
                  text-align: center;
                  font-size: 12px;
                  color: #6d6d6d;
                  background: #ffffff;
                }
                
                &.active a {
                  background: #8dc63f;
                  color: #ffffff;
                }
                
                &.prev,
                &.next {
                  width: 13px;
                  height: 25px;
                    
                    span {
                        font: 0/0 a;
                        cursor: pointer;
                        background-image: url(<%= asset_path 'icon_sprite.png' %>);
                        background-repeat: no-repeat;
                        background-size: 100px 1000px;
                    }
                }
                
                &.prev span{
                    background-position: -50px -716px;
                    
                    &:hover {
                        background-position: -64px -716px;
                    }
                }
                &.next span{
                    background-position: -14px -716px;
                    
                    &:hover {
                        background-position: 0px -716px;
                    }
                }
            }
        }
        
    }
    .ordenar {
      text-align: left;
    }
    
    .cantidad {
      margin-left: -4px;
      text-align: center;
    }
    
    .paginador {
      margin-left: -4px;
      text-align: right;
    }
    
    &.bottom {
      margin-top: 20px;
      margin-bottom: 40px;
    }
    
}

/* grilla de productos */

.product-grid-col4{ 
    @include clear;
    ul{
        @include clear;
        li {
          display: block;
          float: left;
          width: 23.2%;
          margin-right: 2.4%;
          margin-bottom: 40px;
          -webkit-transition: all 300ms ease;
          -moz-transition: all 300ms ease;
          -ms-transition: all 300ms ease;
          -o-transition: all 300ms ease;
          transition: all 300ms ease;
            
            &:nth-child(4n+4) {
                margin-right: 0;
            }
        }
    }
}


@media only screen and (max-width: 990px) {
    .product-grid-col4 ul li {
        width: 32%;
        margin-right: 2%;
        .caja-producto .producto-info .nombre-product a {
            font-size: 14px;
        }
        &:nth-child(4n+4) {
            margin-right: 2%;
        }
        &:nth-child(3n+3) {
            margin-right: 0;
        }
  }
    
}
@media only screen and (max-width: 760px) {
    .filtros{
        .ordenar {
            text-align: left;
            width: 50%;
          }
        .cantidad {
            width: 50%;
            text-align: right;
          }
        .paginador {
            width: 100%;
            margin-left: 0px;
            text-align: center;
            margin-top: 20px;
          }
    }
    .product-grid-col4 ul li {
        width: 48.66667%;
        margin-right: 2.66667%;
        &:nth-child(4n+4),
        &:nth-child(3n+3) {
            margin-right: 2.66667%;
        } 
        &:nth-child(2n+2) {
            margin-right: 0;
        }
    }
}

@media only screen and (max-width: 479px) {
    .filtros{
        .ordenar,
        .cantidad,
        .paginador{
            label {
                display: none;
            }
        }
    }

    .product-grid-col4 ul li {
        width: 100%;
        margin-right: 0;
        &:nth-child(4n+4),
        &:nth-child(3n+3),
        &:nth-child(2n+2) {
            margin-right: 0;
        }
    }
}